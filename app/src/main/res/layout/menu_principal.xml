<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/menu_principal">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:rowCount="7"
        android:columnCount="8">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView2"
            android:layout_row="0"
            android:layout_column="6"
            android:src="@mipmap/buscar_qr"
            android:layout_marginLeft="20dp" />

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:id="@+id/imageView"
            android:layout_column="7"
            android:src="@mipmap/ver_mapa"
            android:layout_row="0"
            android:layout_marginLeft="9dp"
            android:layout_marginRight="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Codigo QR"
            android:onClick="QrScanner"
            android:id="@+id/text_escanear_codigo_qr"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/text_ver_mapa"
            android:layout_centerHorizontal="true"
            android:layout_gravity="top|center_vertical"
            android:layout_column="6"
            android:layout_row="1"
            android:layout_marginLeft="25dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Ver Mapa"
            android:id="@+id/text_ver_mapa"
            android:onClick="onClickVerMapa"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/text_crear_usuario"
            android:layout_centerHorizontal="true"
            android:layout_gravity="top|center_horizontal"
            android:layout_column="7"
            android:layout_row="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Crear Usuario"
            android:id="@+id/text_crear_usuario"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/text_ver_lugares"
            android:layout_centerHorizontal="true"
            android:onClick="onClickCrearUsuario"
            android:layout_gravity="center_horizontal"
            android:layout_column="6"
            android:layout_row="3" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Valorar lugares"
            android:id="@+id/text_valorar_lugares"
            android:layout_below="@+id/text_escanear_codigo_qr"
            android:layout_centerHorizontal="true"
            android:onClick="onClickValorarLugares"
            android:layout_gravity="top|left|center_horizontal"
            android:layout_column="7"
            android:layout_row="3"
            android:layout_marginTop="15dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Ver Lugares"
            android:id="@+id/text_ver_lugares"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:onClick="onClickVerLugares"
            android:layout_gravity="center_horizontal"
            android:layout_column="6"
            android:layout_row="4" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Ver registro actividad"
            android:id="@+id/text_ver_registro_actividad"
            android:onClick="onClickVerRegistroActividad"
            android:layout_row="4"
            android:layout_column="7"
            android:layout_marginTop="15dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Sugerir tags"
            android:onClick="onClickSugerirTag"
            android:id="@+id/text_sugerir_tag"
            android:layout_row="5"
            android:layout_column="6"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Ver tags sugeridos"
            android:onClick="onClickVerTags"
            android:id="@+id/text_ver_tags"
            android:layout_row="5"
            android:layout_column="7"
            android:layout_marginTop="15dp" />

    </GridLayout>

</RelativeLayout>